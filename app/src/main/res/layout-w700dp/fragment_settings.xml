<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_inset"
    tools:context=".ui.settings.SettingsFragment">

    <TextView
        android:id="@+id/settings_audio_device_spinner_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/settings_audio_device_spinner"
        android:text="@string/settings_audio_device"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/default_inset"
        />
    <Spinner
        android:id="@+id/settings_audio_device_spinner"
        android:spinnerMode="dialog"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/settings_audio_device_spinner_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/settings_sampling_rate_spinner"
        />

    <TextView
        android:id="@+id/settings_sampling_rate_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_sampling_rate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/settings_sampling_rate_spinner"
        android:layout_marginStart="@dimen/default_inset"
        />
    <Spinner
        android:id="@+id/settings_sampling_rate_spinner"
        android:spinnerMode="dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/settings_sampling_rate_label"
        app:layout_constraintEnd_toStartOf="@id/settings_sample_encoding_spinner"
        />

    <TextView
        android:id="@+id/settings_bit_depth_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_bit_depth"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/settings_sample_encoding_spinner"
        android:layout_marginStart="@dimen/default_inset"
        />
    <Spinner
        android:id="@+id/settings_sample_encoding_spinner"
        android:spinnerMode="dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/settings_bit_depth_label"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_group_tracks_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="locale"
        app:layout_constraintTop_toBottomOf="@id/settings_sample_encoding_spinner"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        >
        <TextView
            android:id="@+id/settings_tracks_heading"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_headline"
            android:text="@string/settings_tracks"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/default_inset"
            app:layout_constraintVertical_bias="100"
            />
        <Button
            android:id="@+id/settings_add_mono_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/settings_add_mono_track"
            app:icon="@android:drawable/ic_input_add"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/settings_add_stereo_track"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            />
        <Button
            android:id="@+id/settings_add_stereo_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/settings_add_stereo_track"
            app:icon="@android:drawable/ic_input_add"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ListView
        android:id="@+id/settings_tracks_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_group_tracks_header"
        />
</androidx.constraintlayout.widget.ConstraintLayout>